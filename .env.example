# Environment Configuration

# Security
SECRET_KEY=your-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Server
API_HOST=localhost
API_PORT=8000
DEBUG=false
ENVIRONMENT=production

# Database
DB_DRIVER=sqlite
DB_FILE=mage.db

# Game Testing
TARGET_URL=https://play.ezygamers.com/
BROWSER_TYPE=chromium
HEADLESS=true

# Artifacts
ARTIFACT_STORAGE_PATH=./data/artifacts
MAX_ARTIFACT_SIZE_MB=100
SCREENSHOT_FORMAT=png
COMPRESS_ARTIFACTS=true

# Agents
PLANNER_MODEL=gpt-4
ANALYZER_MODEL=gpt-4
MIN_TEST_CASES=20
MAX_TEST_CASES=50
TOP_N_TESTS=10
VALIDATION_THRESHOLD=0.7
MAX_RETRIES=3
TIMEOUT_SECONDS=300

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/mage.log
AUDIT_LOG_FILE=./logs/audit.log

# Frontend
ELECTRON_SERVE_URL=http://localhost:8000
DEV_SERVER_PORT=3000